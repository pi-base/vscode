{
	"name": "pi-base",
	"displayName": "pi-base",
	"description": "Tools for editing the pi-base data repository",
	"version": "0.0.4",
	"engines": {
		"vscode": "^1.54.0"
	},
	"categories": [
		"Other"
	],
	"publisher": "pi-base",
	"repository": {
		"type": "git",
		"url": "https://github.com/pi-base/vscode.git"
	},
	"activationEvents": [
		"onCommand:pi-base.restart",
		"onLanguage:markdown"
	],
	"main": "./dist/main.js",
	"contributes": {
		"commands": {
			"command": "pi-base.restart",
			"title": "pi-base: Restart language server"
		}
	},
	"scripts": {
		"build": "rollup -c",
		"deploy": "vsce publish",
		"lint": "eslint src --ext ts",
		"test": "mocha -r ts-node/register src/**/*.test.ts",
		"vscode:prepublish": "npm run build",
		"watch": "rollup -c -w"
	},
	"dependencies": {
		"remark-frontmatter": "^3.0.0",
		"remark-parse": "^9.0.0",
		"remark-stringify": "^9.0.1",
		"unified": "^9.2.1",
		"unist-util-visit": "^2.0.3",
		"vscode-languageclient": "^7.0.0",
		"vscode-languageserver": "^7.0.0",
		"vscode-languageserver-textdocument": "^1.0.1",
		"yaml-front-matter": "^4.1.1",
		"yaml-language-server-parser": "^0.1.2"
	},
	"devDependencies": {
		"@rollup/plugin-commonjs": "^18.0.0",
		"@rollup/plugin-json": "^4.1.0",
		"@rollup/plugin-node-resolve": "^11.2.1",
		"@rollup/plugin-typescript": "^8.2.1",
		"@types/chai": "^4.2.15",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "^14.14.37",
		"@types/vscode": "^1.54.0",
		"@types/yaml-front-matter": "^4.1.0",
		"@typescript-eslint/eslint-plugin": "^4.19.0",
		"@typescript-eslint/parser": "^4.19.0",
		"chai": "^4.3.4",
		"eslint": "^7.23.0",
		"glob": "^7.1.6",
		"mocha": "^8.3.2",
		"rollup": "^2.43.1",
		"ts-node": "^9.1.1",
		"tslib": "^1.14.1",
		"typescript": "^4.2.3",
		"vsce": "^1.87.0",
		"vscode-test": "^1.5.2"
	}
}
