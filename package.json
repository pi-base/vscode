{
	"name": "pi-base",
	"displayName": "pi-base",
	"description": "Tools for editing the pi-base data repository",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.50.0"
	},
	"categories": [
		"Other"
	],
	"publisher": "pi-base",
	"repository": {
		"type": "git",
		"url": "https://github.com/pi-base/vscode.git"
	},
	"activationEvents": [
		"onCommand:pi-base.restart",
		"onLanguage:markdown"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": {
			"command": "pi-base.restart",
			"title": "pi-base: Restart language server"
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"test": "mocha -r ts-node/register src/**/*.test.ts"
	},
	"devDependencies": {
		"@types/chai": "^4.2.14",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.50.0",
		"@types/yaml-front-matter": "^4.1.0",
		"@typescript-eslint/eslint-plugin": "^4.1.1",
		"@typescript-eslint/parser": "^4.1.1",
		"chai": "^4.2.0",
		"eslint": "^7.9.0",
		"glob": "^7.1.6",
		"mocha": "^8.2.1",
		"ts-node": "^9.0.0",
		"typescript": "^4.0.2",
		"vscode-test": "^1.4.0"
	},
	"dependencies": {
		"remark-frontmatter": "^3.0.0",
		"remark-parse": "^9.0.0",
		"remark-stringify": "^9.0.0",
		"unified": "^9.2.0",
		"unist-util-visit": "^2.0.3",
		"vscode-languageclient": "^6.1.3",
		"vscode-languageserver": "^6.1.1",
		"vscode-languageserver-textdocument": "^1.0.1",
		"yaml-front-matter": "^4.1.0",
		"yaml-language-server-parser": "^0.1.1"
	}
}