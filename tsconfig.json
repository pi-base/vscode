{
	"compilerOptions": {
		"module": "esnext",
		"moduleResolution": "node",
		"target": "es6",
		"lib": [
			"es5",
			"es6"
		],
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"noUnusedParameters": true,
		"types": [
			"node",
			"mocha",
			"chai"
		]
	},
	"exclude": [
		"node_modules",
		".vscode-test"
	]
}